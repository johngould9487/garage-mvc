@model CarEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarID" />
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" value=@Model.Manufacturer/>
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.MOT)  @Html.DisplayNameFor(model => model.MOT)
                        @*<input asp-for="MOT"/> @Html.DisplayNameFor(model => model.MOT)*@
                    </label>
                </div>
            </div>
            @Html.LabelFor(m => m.SelectedDriverId)
            @Html.DropDownListFor(m => m.SelectedDriverId, Model.Drivers, optionLabel: "Select Driver", htmlAttributes: new { @class = "form-control", id = "Driver" } )
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
